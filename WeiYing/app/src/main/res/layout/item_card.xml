<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="1000pt"
    android:layout_marginLeft="35pt"
    android:layout_marginRight="35pt"
    app:cardCornerRadius="5pt">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20pt"
        android:layout_marginRight="55pt"
        android:background="@mipmap/card_bg">
        <TextView
            android:id="@+id/itemCar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32pt"
            android:textStyle="bold"
            android:layout_marginTop="20pt"
            android:layout_gravity="center"
            android:textColor="#ffffff"/>
        <ImageView
            android:id="@+id/itemCar_image"
            android:layout_width="360pt"
            android:layout_height="500pt"
            android:layout_margin="20pt"
            android:layout_gravity="center"
            android:scaleType="fitXY" />
        <TextView
            android:id="@+id/itemCar_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="10pt"
            android:textSize="30pt"
            android:textColor="#eeeeee" />
    </LinearLayout>
</android.support.v7.widget.CardView>