<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:banner="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_colorful"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="300pt">
            </com.youth.banner.Banner>

            <RelativeLayout
                android:id="@+id/homeserach"
                android:layout_width="500pt"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:background="@drawable/black_trans_bg"
                android:paddingLeft="15dp"
                >
                <TextView
                    android:id="@+id/etSearchKey"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:background="@null"
                    android:drawableLeft="@mipmap/search"
                    android:drawablePadding="10dp"
                    android:imeOptions="actionSearch"
                    android:text="一念天堂"
                    android:textColor="@color/gray_light"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    />

            </RelativeLayout>

            <LinearLayout
                android:padding="10pt"
                android:id="@+id/li"
                android:layout_below="@id/banner"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20pt"
                >

                <View
                    android:layout_width="2pt"
                    android:layout_height="30pt"
                    android:layout_marginLeft="10pt"
                    android:background="#80FF80"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10pt"
                    android:text="精彩推荐"
                    android:textSize="20pt"
                    android:textColor="#FFFFFF"
                    />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_below="@id/li"
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                >
            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
